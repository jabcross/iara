  "version": "0.2.0",
  "inputs": [
    {
      "id": "test",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "03-two-nodes",
          "04-multithread",
          "05-cholesky",
          "06-broadcast",
          "07-ownership",
          "08-SIFT",
          "09-hierarchy",
          "10-multi-rate",
          "11-forward-delay",
          "12-average3"
        ],
        "description": "Which test to run",
        "key": "pickedTest"
      }
    },
    {
      "id": "scheduler",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "virtual-fifo",
          "ring-buffer"
        ],
        "description": "Which scheduler to use",
        "key": "pickedScheduler"
      }
    },
    {
      "id": "experiment_args",
      "type": "pickString",
      "options": [
        "",
        "--no-scheduler"
      ],
      "description": "Which args to pass to experiment",
    },
    {
      "id": "top_level_name",
      "type": "pickString",
      "options": [
        "run",
        "top_parallel_degridder",
        "top_parallel_degridder_complete",
      ],
      "description": "Name of top level actor",
    },
    {
      "id": "debugArgs",
      "type": "promptString",
      "description": "Args to pass",
    },
  ],
  "configurations": [
    {
      "name": "CMake: Debug Test (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "presentation": {
        "hidden": false,
        "group": "cmake-tests"
      },
      "program": "${cmake.testWorkingDirectory}/a.out",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${env:LLVM_INSTALL}/lib:${env:LLVM_INSTALL}/lib/x86_64-unknown-linux-gnu:${env:LD_LIBRARY_PATH}"
        }
      ],
      "args": [
        "${cmake.testArgs}"
      ],
      "cwd": "${cmake.testWorkingDirectory}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "CMake: Debug Test (lldb)",
      "type": "lldb-dap",
      "request": "launch",
      "presentation": {
        "hidden": false,
        "group": "cmake-tests"
      },
      "program": "${cmake.testProgram}",
      "env": [
        "SCHEDULER_MODE=${input:scheduler}",
        "LD_LIBRARY_PATH=${env:LLVM_INSTALL}/lib:${env:LLVM_INSTALL}/lib/x86_64-unknown-linux-gnu:${env:LD_LIBRARY_PATH}"
      ],
      "args": [
        "${cmake.testArgs}"
      ],
      "cwd": "${cmake.testWorkingDirectory}",
      "stopOnEntry": false
    },
