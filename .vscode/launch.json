      "cwd": "${workspaceFolder}/experiment/cholesky/instances/2048_32_virtual-fifo/build-virtual-fifo",
      "env": {
        "POLYGEIST_MLIR_CLANG_BIN": "${workspaceFolder}/../Polygeist/build/bin/mlir-clang",
        "LLVM_PROJECT": "${workspaceFolder}/../Polygeist/llvm-project"
