{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "test",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "03-two-nodes",
          "04-multithread",
          "05-cholesky",
          "06-broadcast",
          "07-ownership",
          "09-hierarchy",
          "10-multi-rate",
          "11-forward-delay",
          "12-average3"
        ],
        "description": "Which test to run",
        "key": "pickedTest"
      }
    },
    {
      "id": "scheduler",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "ooo-scheduler"
        ],
        "description": "Which scheduler to use",
        "key": "pickedScheduler"
      }
    }
  ],
  "configurations": [
    {
      "name": "total-firings-calculator",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/total-firings-calculator.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/test/Iara/${input:test}/build",
      "args": "total_firings.input.txt",
      "python": "${workspaceFolder}/scripts/pyenv/bin/python"
    },
    {
      "name": "(gdb) Compiler test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/iara-opt",
      "args": ["--flatten", "--${input:scheduler}", "../topology.test"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/test/Iara/${input:test}/build",
      "environment": [
        {
          "name": "POLYGEIST_MLIR_CLANG_BIN",
          "value": "${workspaceFolder}/../Polygeist/build/bin/mlir-clang"
        },
        {
          "name": "LLVM_PROJECT",
          "value": "${workspaceFolder}/../Polygeist/llvm-project"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "CMake: build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) Runtime test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/test/Iara/${input:test}/build/a.out",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/test/Iara/${input:test}/build/",
      "environment": [{"name": "SCHEDULER_MODE",
                     "value": "${input:scheduler}"}],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "LIT test",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch",
      "program": "${workspaceFolder}/test/Iara/03-two-nodes/build/a.out",
      "args": [],
      "cwd": "${workspaceFolder}/test/Iara/03-two-nodes/build/"
    },
    {
      "name": "(gdb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "enter program name, for example ${workspaceFolder}/a.out",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },

    {
      "name": "dif-to-iara",
      "type": "debugpy",
      "args": ["${workspaceFolder}/test/Iara/08-SIFT/topology.dif"],
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dif-to-iara.py"
    },

    {
      "name": "SIFT",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/iara-opt",
      "args": [
        "--flatten",
        "--sdf-to-tasks",
        "test/Iara/08-SIFT/build/topology.mlir"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "CMake: build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(ctest) Launch",
      "type": "cppdbg",
      "cwd": "${cmake.testWorkingDirectory}",
      "request": "launch",
      "program": "${cmake.testProgram}",
      "args": ["${cmake.testArgs}"]
    }
  ]
}
