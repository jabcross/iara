{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "test",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "03-two-nodes",
          "04-multithread",
          "05-cholesky",
          "06-broadcast",
          "07-ownership",
          "09-hierarchy",
          "10-multi-rate",
          "11-forward-delay"
        ],
        "description": "Which test to run",
        "key": "pickedTest",
      }
    },
    {
      "id": "scheduler",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "virtual-fifo"
        ],
        "description": "Which scheduler to use",
        "key": "pickedScheduler"
      }
    },
    {
      "id": "remember_test",
      "type": "command",
      "command": "extension.commandvariable.remember",
      "args": {
        "key": "pickedTest"
      }
    },
    {
      "id": "remember_scheduler",
      "type": "command",
      "command": "extension.commandvariable.remember",
      "args": {
        "key": "pickedScheduler"
      }
    }
  ],
  "tasks": [
    {
      "type": "shell",
      "command": "build.sh",
      "label": "build.sh",
      "problemMatcher": "$msCompile"
    },
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
        "iara-opt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "CMake template build task",
    },
    {
      "type": "cmake",
      "label": "CMake: test",
      "command": "build",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "targets": [
        "check-iara"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "CMake template test task"
    },
    {
      "label": "Make SIFT topology",
      "type": "shell",
      "command": "bash -c 'cd ${workspaceFolder} ; scripts/build.sh && mkdir -p test/Iara/08-SIFT/build && python scripts/dif-to-iara.py test/Iara/08-SIFT/topology.dif > test/Iara/08-SIFT/build/topology.mlir' "
    },
    {
      "label": "Build test",
      "type": "shell",
      "command": "scripts/build-single-test.sh test/Iara/${input:remember_test} ${input:remember_scheduler}",
      "options": {
        "env": {
          "MOLD_PATH": "/usr/bin/mold",
          // "LIT_OPTS": "--max-tests=1 --order=lexical --filter=${input:remember_test}"
        }
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build test (pick)",
      "type": "shell",
      "command": "scripts/build-single-test.sh test/Iara/${input:test} ${input:scheduler}",
      "options": {
        "env": {
          "MOLD_PATH": "/usr/bin/mold",
          // "LIT_OPTS": "--max-tests=1 --order=lexical --filter=${input:remember_test}"
        }
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}