{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "test",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "03-two-nodes",
          "04-multithread",
          "05-cholesky",
          "06-broadcast",
          "07-ownership",
          "08-SIFT",
          "09-hierarchy",
          "10-multi-rate",
          "11-forward-delay"
        ],
        "description": "Which test to run",
        "key": "pickedTest",
      }
    },
    {
      "id": "scheduler",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "options": [
          "virtual-fifo"
        ],
        "description": "Which scheduler to use",
        "key": "pickedScheduler"
      }
    },
    {
      "id": "remember_test",
      "type": "command",
      "command": "extension.commandvariable.remember",
      "args": {
        "key": "pickedTest"
      }
    },
    {
      "id": "remember_scheduler",
      "type": "command",
      "command": "extension.commandvariable.remember",
      "args": {
        "key": "pickedScheduler"
      }
    }
  ],
  "tasks": [
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
        "iara-opt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "CMake template build task",
    },
    {
      "type": "cmake",
      "label": "CMake: test",
      "command": "build",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "targets": [
        "check-iara"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "CMake template test task"
    },
    {
      "label": "Build test",
      "type": "shell",
      "command": "cmake --build build --target run-${input:test}-${input:scheduler}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}